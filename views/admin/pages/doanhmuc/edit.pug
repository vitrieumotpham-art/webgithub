extends ../../layout/defaut.pug
include ../../mixins/alert.pug

block main
  +alert-error(5000)
  +alert-success(5000)

  .container-fluid.mt-4
    h1.text-primary.fw-bold.mb-4 #{pageTitle}

    .card.shadow-sm.border-0
      .card-body
        form(
            action=`/${PefixAdmin}/doanhmuc/edit/${data.id}?_method=PATCH`
            method="POST"
          )
          //- 1. Tiêu đề
          .mb-3
            label.form-label.fw-bold(for="title") Tiêu đề danh mục *
            input#title.form-control(
              type="text"
              name="title"
              value=data.title
              required
            )

          //- ĐÃ XÓA phần Danh mục cha để bỏ phân cấp

          //- 2. Vị trí
          .mb-3
            label.form-label.fw-bold(for="position") Vị trí
            input#position.form-control(
              type="number"
              name="position"
              value=data.position
              min="1"
            )

          //- 3. Mô tả
          .mb-3
            label.form-label.fw-bold(for="description") Mô tả danh mục
            textarea#my-expressjs-tinymce-app.form-control(
              name="description"
              rows="10"
            ) !{data.description}

          //- 4. Trạng thái
          .mb-4
            label.form-label.fw-bold.d-block Trạng thái
            .form-check.form-check-inline
              input#statusActive.form-check-input(
                type="radio"
                name="status"
                value="active"
                checked=(data.status == "active" ? true : false)
              )
              label.form-check-label(for="statusActive") Hoạt động
            .form-check.form-check-inline
              input#statusInActive.form-check-input(
                type="radio"
                name="status"
                value="inactive"
                checked=(data.status == "inactive" ? true : false)
              )
              label.form-check-label(for="statusInActive") Tạm dừng

          //- 5. Nút hành động
          hr
          .d-flex.gap-2
            button.btn.btn-primary.px-4(type="submit")
              i.fas.fa-save.me-2
              | Cập nhật
            a.btn.btn-outline-secondary.px-4(href=`/${PefixAdmin}/doanhmuc`) Hủy bỏ