doctype html
html
  head
    title 404 - Page Not Found
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    //- Font chữ và CSS
    style.
      @import url('https://fonts.googleapis.com/css?family=Roboto+Mono');
      
      *, *:before, *:after {
        box-sizing: border-box;
      }

      html, body {
        font-family: 'Roboto Mono', monospace;
        font-size: 16px;
        background-color: #000;
        color: #fff;
        margin: 0;
        padding: 0;
        height: 100vh;
        overflow: hidden;
        user-select: none;
      }

      .container {
        width: 100%;
        height: 100%;
        position: relative;
      }

      .center-xy {
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);
        position: absolute;
      }

      .copy-container {
        text-align: center;
        white-space: nowrap;
      }

      p {
        color: #fff;
        font-size: 24px;
        letter-spacing: .2px;
        margin: 0;
        display: inline-block;
      }

      .handle {
        background: #ffe500;
        width: 14px;
        height: 30px;
        position: absolute;
        display: inline-block;
        margin-left: 5px;
      }

      #cb-replay {
        fill: #666;
        width: 30px;
        margin: 15px;
        right: 0;
        bottom: 0;
        position: absolute;
        cursor: pointer;
        transition: fill 0.3s;
      }

      #cb-replay:hover {
        fill: #ffe500;
      }

      .back-home {
        position: absolute;
        bottom: 50px;
        left: 50%;
        transform: translateX(-50%);
        color: #666;
        text-decoration: none;
        border: 1px solid #666;
        padding: 10px 20px;
        border-radius: 4px;
        transition: 0.3s;
      }
      .back-home:hover {
        color: #000;
        background: #fff;
      }

  body
