    //- Nhúng thư viện cần thiết (jQuery và GSAP)
    script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/gsap/1.20.3/TweenMax.min.js")
    
    //- Script xử lý hiệu ứng
    script.
      $(document).ready(function() {
        var $copyContainer = $(".copy-container"),
            $replayIcon = $('#cb-replay'),
            $copy = $copyContainer.find('p'),
            text = $copy.text();

        // Thay thế SplitText bằng cách thủ công vì SplitText là plugin trả phí của GSAP
        $copy.html("");
        for (var i = 0; i < text.length; i++) {
          var char = text[i] === " " ? "&nbsp;" : text[i];
          $copy.append('<span class="char">' + char + '</span>');
        }

        var $chars = $(".char"),
            tl = new TimelineMax(),
            handleTL = new TimelineMax({repeat: -1, yoyo: true});

        // Hiệu ứng con trỏ nhấp nháy
        handleTL.fromTo('.handle', 0.4, {autoAlpha: 0}, {autoAlpha: 1});

        function animateText() {
          tl.staggerFromTo($chars, 0.01, {autoAlpha: 0}, {autoAlpha: 1}, 0.05);
          
          // Di chuyển con trỏ theo chữ (ước tính)
          var fullWidth = $copy.width();
          TweenMax.to('.handle', text.length * 0.05, {
            x: fullWidth, 
            ease: SteppedEase.config(text.length),
            delay: 0.05
          });
        }

        animateText();

        $replayIcon.on('click', function() {
          tl.restart();
          TweenMax.set('.handle', {x: 0});
          animateText();
        });
      });