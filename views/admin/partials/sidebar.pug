aside.sidebar
  style.
    :root {
      --sidebar-width: 260px;
      --sidebar-bg: #1a1a1a;
      --pnt-gold: #c5a059;
      --text-muted: #adadad;
      --hover-bg: #252525;
    }

    .sidebar {
      width: var(--sidebar-width);
      height: 100vh;
      background-color: var(--sidebar-bg);
      color: #fff;
      position: fixed;
      left: 0;
      top: 0;
      z-index: 1050;
      overflow-y: auto;
      border-right: 1px solid #333;
      font-family: 'Segoe UI', Roboto, sans-serif;
    }

    /* Đẩy nội dung chính sang phải tránh bị đè */
    body:has(.sidebar) .main-content {
      margin-left: var(--sidebar-width) !important;
      width: calc(100% - var(--sidebar-width)) !important;
      min-height: 100vh;
      display: block;
    }

    .sidebar-header {
      padding: 30px 20px;
      text-align: center;
      background: #111;
      border-bottom: 1px solid #2d2d2d;
    }
    .sidebar-header a {
      color: var(--pnt-gold);
      text-decoration: none;
      font-size: 22px;
      font-weight: 800;
      letter-spacing: 1.5px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .nav-section-title {
      padding: 25px 25px 10px;
      font-size: 11px;
      font-weight: 700;
      color: #666;
      text-transform: uppercase;
      letter-spacing: 2px;
    }

    .nav-list {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .nav-item a {
      display: flex;
      align-items: center;
      padding: 14px 25px;
      color: var(--text-muted);
      text-decoration: none;
      transition: all 0.3s ease;
      border-left: 4px solid transparent;
      font-size: 15px;
    }

    .nav-item a i {
      width: 28px;
      font-size: 17px;
      margin-right: 10px;
      text-align: center;
    }

    .nav-item a:hover, .nav-item a.active {
      background: rgba(197, 160, 89, 0.1);
      color: var(--pnt-gold);
      border-left-color: var(--pnt-gold);
    }

    .sidebar::-webkit-scrollbar { width: 5px; }
    .sidebar::-webkit-scrollbar-thumb { background: #333; }

  .sidebar-header
    a(href=`/${PefixAdmin}/dashboard`)
      i.fa-solid.fa-compass-drafting.me-2
      span PNT DECOR

