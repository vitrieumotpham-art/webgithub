mixin alert-success(time)
           - if(messages.success)
            .messages.info
                div(
                    class="alert alert-success"
                    data-time=time
                    show-alert
                ) #{messages.success}
mixin alert-error(time)
           - if(messages.error)
            .messages.info
                div(
                    class="alert alert-danger"
                    data-time=time
                    show-alert
                ) #{messages.error}