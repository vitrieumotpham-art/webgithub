mixin form-field(type, name, placeholder, required=true)
    .form-group
        label(for=name) #{placeholder}
        if type === 'textarea'
            textarea.form-control(id=name, name=name, placeholder=placeholder, required=required, rows="5")
        else
            input.form-control(type=type, id=name, name=name, placeholder=placeholder, required=required)