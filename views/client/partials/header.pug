header.header
  //- 1. LOGO: Lấy từ database, dùng websiteName làm alt cho SEO
  a.logo(href="/")
    img(
      src=(settingGeneral ? settingGeneral.logo : "/img/logo.png") 
      alt=(settingGeneral ? settingGeneral.websiteName : "PNT DECOR")
    )
  
  //- 2. MENU
  nav.list-menu
    a(href="/") Trang chủ
    a(href="/about_us") Về Chúng Tôi
    a(href="/dichvu") Dịch vụ
    a(href="/duan") Dự án
    a(href="/khach") Khách hàng
    a(href="/tintuc") Tin tức
    a(href="/lienhe") Liên Hệ 
  
  //- 3. KHU VỰC BÊN PHẢI
  .header-right.d-flex.align-items-center
    //- THÔNG TIN LIÊN HỆ: Lấy số điện thoại và email từ Model
    .thongtin.d-none.d-xl-block
      p.mb-0 #{settingGeneral ? settingGeneral.phone : '+84 914 761 150'}
      p.mb-0 #{settingGeneral ? settingGeneral.email : 'info@apes.com.vn'}
    
    //- MẠNG XÃ HỘI: Lấy link từ Model
    .social.mx-3.d-flex.gap-2
      a(href=(settingGeneral ? settingGeneral.facebook : "#") target="_blank")
        img(src="/img/icons8-facebook-36.png" alt="FB" width="24")
      a(href=(settingGeneral ? settingGeneral.instagram : "#") target="_blank")
        img(src="/img/icons8-instagram-logo-36.png" alt="Insta" width="24")

    //- NÚT YÊU THÍCH
    .cart-icon.mx-2
      a.position-relative(href="/cart" title="Danh sách yêu thích")
        i.fa-solid.fa-heart.text-danger(style="font-size: 1.4rem;")
        span.position-absolute.top-0.start-100.translate-middle.badge.rounded-pill.bg-dark.text-white(
          style="font-size: 0.65rem; padding: 0.3em 0.5em; border: 1.5px solid #fff;"
        )
          | #{miniCart ? miniCart.totalQuantity : 0}

    //- PHẦN ĐĂNG NHẬP / ĐĂNG KÝ
    .auth-area.mx-2
      if user
        //- Trạng thái đã đăng nhập
        .dropdown
          a.nav-link.dropdown-toggle.d-flex.align-items-center(href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false")
            i.fa-solid.fa-user-circle.me-1(style="font-size: 1.4rem;")
            span.small.fw-bold #{user.fullName}
          ul.dropdown-menu.dropdown-menu-end.shadow.border-0
            li: a.dropdown-item(href="/user/profile") #[i.fa-solid.fa-address-card.me-2] Trang cá nhân
            li: a.dropdown-item(href="/user/settings") #[i.fa-solid.fa-gear.me-2] Cài đặt
            li: hr.dropdown-divider
            li: a.dropdown-item.text-danger(href="/user/logout") #[i.fa-solid.fa-right-from-bracket.me-2] Đăng xuất
      else
        //- Trạng thái chưa đăng nhập
        .auth-buttons.d-flex.gap-2
          a.btn.btn-sm.btn-outline-dark.rounded-pill.px-3(href="/user/login") Đăng nhập
          a.btn.btn-sm.btn-primary.rounded-pill.px-3.d-none.d-md-inline-block(href="/user/register") Đăng ký
    
    //- Ô TÌM KIẾM
    .search-box.ms-2
      form(action="/search" method="GET").d-flex.align-items-center
        input.search-input(type="text" name="keyword" placeholder="Tìm dự án..." value=keyword)
        button.search-btn(type="submit")
          i.fa-solid.fa-magnifying-glass