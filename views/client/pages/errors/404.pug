doctype html
html
  head
    title 404 - Not Found
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    style.
      @import url('https://fonts.googleapis.com/css?family=Lato|Russo+One');
      *, *:after, *:before { box-sizing: border-box; }
      body { padding: 0; margin: 0; background-color: #292256; overflow: hidden; }
      
      .container {
        position: absolute; top: 0; left: 0;
        width: 100%; height: 100vh; overflow: hidden;
      }

      .container-star {
        background-image: linear-gradient(to bottom, #292256 0%, #8446cf 70%, #a871d6 100%);
      }
      .container-star:after {
        content: ""; width: 100%; height: 100%; position: absolute; top: 0;
        background: radial-gradient(ellipse at center, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 0) 40%, rgba(15, 10, 38, 0.2) 100%);
      }

      .star-1, .star-2 {
        position: absolute; border-radius: 50%; background-color: #ffffff;
        animation: twinkle 5s infinite ease-in-out;
      }

      .container-title {
        width: 100%; max-width: 600px; left: 50%; top: 50%;
        transform: translate(-50%, -50%); position: absolute;
        color: white; text-align: center; display: flex;
        flex-direction: column; justify-content: center; align-items: center; z-index: 10;
      }
      .title > * { display: inline-block; font-size: clamp(80px, 15vw, 200px); }
      .number { font-family: 'Russo One', sans-serif; text-shadow: 20px 20px 20px rgba(0, 0, 0, 0.2); padding: 0 0.2em; }
      .subtitle { font-size: 25px; margin-top: 1.5em; font-family: "Lato", sans-serif; }

      .moon {
        position: relative; border-radius: 50%; width: 160px; height: 160px;
        background-color: #fff; box-shadow: 0 0 20px #fff, 0 0 100px #ff1177;
        animation: rotate 5s ease-in-out infinite;
      }
      .face { top: 60%; left: 47%; position: absolute; }
      .mouth { 
        background-color: #5c3191; width: 25px; height: 25px; position: absolute;
        border-radius: 50% 50% 50% 50%; transform: rotate(45deg); animation: snore 5s infinite; 
      }
      .eyes { position: absolute; top: -30px; left: -30px; }
      .eye-left, .eye-right { 
        border: 4px solid #5c3191; width: 30px; height: 15px; 
        border-bottom-left-radius: 100px; border-bottom-right-radius: 100px; border-top: 0; position: absolute;
      }
      .eye-right { left: 50px; }

      button {
        font-size: 22px; margin-top: 1.5em; padding: 0.5em 1em; color: white;
        background: transparent; border: 2px solid white; border-radius: 5px; cursor: pointer;
        transition: 0.3s; font-family: "Lato", sans-serif;
      }
      button:hover { background: white; color: #5c3191; }

      /* Keyframes */
      @keyframes rotate { 0%, 100% { transform: rotate(-8deg); } 50% { transform: rotate(0deg); } }
      @keyframes snore { 0%, 100% { transform: scale(1) rotate(30deg); } 50% { transform: scale(0.5) rotate(30deg); } }
      @keyframes twinkle { 0%, 100% { opacity: 0.7; } 50% { opacity: 0.3; } }

      /* Bird CSS lược bỏ để ngắn gọn, bạn có thể dán thêm phần bird anim vào đây */
      .bird { position: absolute; z-index: 5; }

  body
    .container.container-star
      //- Dùng Javascript của Pug để tạo vị trí sao ngẫu nhiên thay cho vòng lặp SCSS
      - for (var i = 1; i <= 30; i++)
        .star-1(style=`top: ${Math.random()*100}vh; left: ${Math.random()*100}vw; width: ${Math.random()*5+2}px; height: ${Math.random()*5+2}px; animation-delay: ${Math.random()*5}s`)
      - for (var i = 1; i <= 30; i++)
        .star-2(style=`top: ${Math.random()*100}vh; left: ${Math.random()*100}vw; width: ${Math.random()*3+1}px; height: ${Math.random()*3+1}px; animation-delay: ${Math.random()*5}s`)

    .container.container-bird
      //- Chim bay (Tạm thời để 3 con cho nhẹ)
      - for (var i = 1; i <= 3; i++)
        .bird.bird-anim(style=`animation: bird${i} 20s linear infinite; animation-delay: ${i*2}s`)
          //- Cấu trúc cánh chim tương tự code cũ của bạn
      
      .container-title
        .title
          .number 4
          .moon
            .face
              .mouth
              .eyes
                .eye-left
                .eye-right
          .number 4
        .subtitle Oops. Looks like you took a wrong turn.
        a(href="/")
          button Go back